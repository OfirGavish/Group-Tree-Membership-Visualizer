{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Deploy Group Tree Membership Visualizer to Azure Static Web Apps (No GitHub Required)",
    "author": "Group Tree Membership Visualizer"
  },
  "parameters": {
    "siteName": {
      "type": "string",
      "defaultValue": "[concat('group-tree-visualizer-', uniqueString(resourceGroup().id))]",
      "minLength": 2,
      "metadata": {
        "description": "Name of the Static Web App. Must be globally unique."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "East US 2",
      "allowedValues": [
        "East US 2",
        "Central US",
        "West US 2",
        "West Europe",
        "Southeast Asia"
      ],
      "metadata": {
        "description": "Location for the Static Web App"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "Free",
      "allowedValues": [
        "Free",
        "Standard"
      ],
      "metadata": {
        "description": "SKU for the Static Web App"
      }
    }
  },
  "variables": {
    "staticWebAppName": "[parameters('siteName')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/staticSites",
      "apiVersion": "2022-03-01",
      "name": "[variables('staticWebAppName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]",
        "tier": "[parameters('sku')]"
      },
      "properties": {
        "buildProperties": {
          "appLocation": "/",
          "apiLocation": "",
          "outputLocation": "out"
        },
        "stagingEnvironmentPolicy": "Enabled",
        "allowConfigFileUpdates": true,
        "publicNetworkAccess": "Enabled"
      }
    }
  ],
  "outputs": {
    "staticWebAppUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/staticSites', variables('staticWebAppName'))).defaultHostname)]"
    },
    "staticWebAppName": {
      "type": "string",
      "value": "[variables('staticWebAppName')]"
    },
    "deploymentToken": {
      "type": "string",
      "value": "[listSecrets(resourceId('Microsoft.Web/staticSites', variables('staticWebAppName')), '2022-03-01').properties.apiKey]"
    },
    "nextSteps": {
      "type": "string",
      "value": "1. Upload your built files using Azure CLI or Portal. 2. Configure authentication in Azure Portal. 3. Add Microsoft Graph permissions. See DEPLOYMENT_ALTERNATIVES.md for detailed steps."
    }
  }
}
